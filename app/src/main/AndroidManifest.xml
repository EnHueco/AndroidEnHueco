<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.diegoalejogm.enhueco">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.READ_CALENDAR"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <application
        android:name=".model.EHApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar" >

        <service
                android:name=".model.managers.ProximityManager$ProximityManagerReportingService"
                android:exported="false"/>

        <receiver
                android:name=".model.managers.ProximityManager$ProximityManagerReportingServiceAlarmReceiver"
                android:process=":remote" >
        </receiver>

        <receiver android:name=".model.managers.ProximityManager$ProximityManagerReportingBootReceiver"
                  android:enabled="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>

        <activity android:name=".view.StartActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".view.LoginActivity" >
        </activity>
        <activity
            android:name=".view.MainTabbedActivity"
            android:label="@string/title_activity_main_tabbed"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity android:name=".view.FriendDetailActivity"
                  android:parentActivityName=".view.MainTabbedActivity">

        </activity>
        <activity android:name=".view.CommonFreeTimePeriodsActivity" >
        </activity>
        <activity
            android:name=".view.ScheduleActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".view.MainTabbedActivity" >
        </activity>
        <activity
            android:name=".view.AddEditEventActivity"
            android:parentActivityName=".view.ScheduleActivity"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name=".view.AddFriendSelectActivity"
            android:parentActivityName=".view.MainTabbedActivity" >
        </activity>
        <activity
            android:name=".view.CaptureQRActivityAnyOrientation"
            android:screenOrientation="fullSensor"
            android:stateNotNeeded="true"
            android:theme="@style/zxing_CaptureTheme"
            android:windowSoftInputMode="stateAlwaysHidden" >
        </activity>
        <activity
            android:name=".view.ShowQRActivity"
            android:theme="@style/AppTheme.NoActionBar.BlackStatusBar" >
        </activity>
        <activity
            android:name=".view.FriendRequestsActivity"
            android:parentActivityName=".view.MainTabbedActivity" >
        </activity>
        <activity android:name=".view.SearchNewFriendsActivity" >
            <meta-data
                    android:name="android.app.searchable"
                    android:resource="@xml/searchable"/>
        </activity>
        <activity android:name=".view.SearchResultsActivity" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".view.SelectCalendarActivity"
            android:label="@string/title_activity_select_calendar"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
                android:name=".view.SettingsActivity"
                android:label="@string/title_activity_settings">
        </activity>
    </application>

</manifest>
